<h1><%= title %></h1>

<%- messages() %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="formTitle">Sign In</h2>
        <form id="loginForm" class="auth-form">
            <div class="input-group">
                <label for="login-identifier">Your email</label>
                <input 
                    type="email" 
                    id="login-identifier" 
                    name="account_email"
                    required 
                    placeholder="sample@domain.com"
                >
            </div>

            <div class="input-group">
                <label for="login-password">Password</label>
                <input 
                    type="password" 
                    id="login-password" 
                    name="account_password"
                    required 
                    placeholder="Your secret password"
                >
            </div>

            <button type="submit" class="auth-btn">Enter</button>
        </form>
        <p class="switch-link">
            No account? <a href="/account/register">Get one here</a>
        </p>
    </div>
</div>