<h1><%= title %></h1>

<%- messages() %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="formTitle">Sign In</h2>
        <form id="loginForm" class="auth-form">
            <div class="input-group">
                <label for="login-identifier">Your email</label>
                <input 
                    type="email" 
                    id="login-identifier" 
                    name="account_email"
                    required 
                    placeholder="sample@domain.com"
                >
            </div>

            <div class="input-group">
                <label for="accountPassword">Password:</label> 
                <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
                <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </div>
            <button type="submit" class="auth-btn">Enter</button>
        </form>
        <p class="switch-link">
            No account? <a href="/account/register">Get one here</a>
        </p>
    </div>
</div>