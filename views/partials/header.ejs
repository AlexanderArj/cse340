<header id="top-header">
    <div class="logo-area">
        <img src="/images/site/icon.png" alt="Site logo" width="73" height="65">
        <span class="siteName">
            <a href="/" title="Return to home page">CSE Motors</a>
        </span>
    </div>
    
    <div id="tools">
        <% if (locals.loggedin && locals.accountData) { %>
            <a title="Manage account" href="/account/">
                Welcome <%= accountData.account_firstname %>
            </a>
            <form action="/account/logout" method="post" style="display:inline;">
                <button type="submit" class="auth-btn">Logout</button>
            </form>
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>