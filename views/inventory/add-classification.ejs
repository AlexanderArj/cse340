<h1><%= title %></h1>

<% if (typeof errors !== "undefined" && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="formTitle"><%= title %></h2>
        <form id="addClassForm" class="auth-form" action="/inv/add-classification" method="post">
            <div class="input-group">
                <label for="classificationName">Classification Name</label>
                <span>Name cannot contain spaces or special characters of any kind.</span>
                <input 
                    type="text" 
                    id="classificationName" 
                    name="classification_name" 
                    required 
                    placeholder="e.g. Luxury"
                    pattern="^[a-zA-Z0-9]+$" 
                    title="No spaces or special characters allowed"
                >
            </div>

            <button type="submit" class="auth-btn">Add Classification</button>
        </form>
    </div>
</div>