<h1><%= title %></h1>

<% if (errors) { %>
    <ul class="error-list">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="formTitle"><%= title %></h2>
        <p class="form-instruction">All fields are required.</p>

        <form class="auth-form" action="/inv/add-inventory" method="post">
            <div class="input-group">
                <label for="classificationList">Classification</label>
                <%- classificationSelect %>
            </div>

            <div class="input-group">
                <label for="inv_make">Make</label>
                <input type="text" name="inv_make" id="inv_make" required placeholder="Min 3 characters" value="<%= locals.inv_make %>">
            </div>

            <div class="input-group">
                <label for="inv_model">Model</label>
                <input type="text" name="inv_model" id="inv_model" required placeholder="Min 3 characters" value="<%= locals.inv_model %>">
            </div>

            <div class="input-group">
                <label for="inv_description">Description</label>
                <textarea name="inv_description" id="inv_description" required><%= locals.inv_description %></textarea>
            </div>

            <div class="input-group">
                <label for="inv_image">Image Path</label>
                <input type="text" name="inv_image" id="inv_image" required value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>">
                <!-- C:\Users\arome\OneDrive\Documentos\BYU programming\CSE340-node.js\cse340\public\images\vehicles\no-image.png -->
            </div>

            <div class="input-group">
                <label for="inv_thumbnail">Thumbnail Path</label>
                <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">
                <!-- public\images\vehicles\no-image-tn.png -->
            </div>

            <div class="input-group">
                <label for="inv_price">Price</label>
                <input type="number" name="inv_price" id="inv_price" required placeholder="Decimal or integer" value="<%= locals.inv_price %>">
            </div>

            <div class="input-group">
                <label for="inv_year">Year</label>
                <input type="number" name="inv_year" id="inv_year" required min="1900" max="2099" placeholder="4-digit year" value="<%= locals.inv_year %>">
            </div>

            <div class="input-group">
                <label for="inv_miles">Miles</label>
                <input type="number" name="inv_miles" id="inv_miles" required placeholder="Only numbers" value="<%= locals.inv_miles %>">
            </div>

            <div class="input-group">
                <label for="inv_color">Color</label>
                <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>">
            </div>

            <button type="submit" class="auth-btn">Add Vehicle</button>
        </form>
    </div>
</div>